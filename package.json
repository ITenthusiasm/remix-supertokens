{
  "name": "remix-template-express",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev": "remix build && run-p dev:*",
    "dev:node": "cross-env NODE_ENV=development nodemon ./server.js --watch ./server.js",
    "dev:remix": "remix watch",
    "sass": "sass --watch app/:app/",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "lint": "prettier --ignore-path .gitignore --check . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write ."
  },
  "dependencies": {
    "@remix-run/express": "^1.6.5",
    "@remix-run/node": "^1.6.5",
    "@remix-run/react": "^1.6.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.33.1",
    "supertokens-node": "^11.0.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.5",
    "@remix-run/eslint-config": "^1.6.5",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/morgan": "^1.9.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "sass": "^1.53.0",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
