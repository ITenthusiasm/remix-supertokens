  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev": "remix build && run-p dev:*",
    "dev:node": "cross-env NODE_ENV=development nodemon ./server.js --watch ./server.js",
    "dev:remix": "remix watch",
    "sass": "sass --watch app/:app/",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "lint": "prettier --ignore-path .gitignore --check . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write ."
  },
  "dependencies": {
    "@form-observer/react": "^0.5.3",
    "@remix-run/express": "^1.19.3",
    "@remix-run/node": "^1.19.3",
    "@remix-run/react": "^1.19.3",
    "compression": "^1.7.4",
    "cookie": "^0.5.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "supertokens-node": "^16.7.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.19.3",
    "@remix-run/eslint-config": "^1.19.3",
    "@types/compression": "^1.7.5",
