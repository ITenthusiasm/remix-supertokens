{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Bundler",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true, // Handled by Vite
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "skipLibCheck": true, // TODO: Temporary, until Remix + Vite can resolve some type issues
    "paths": {
      "~/*": ["./app/*"]
    }
  },
  "include": ["env.d.ts", "**/*.ts", "**/*.tsx", "app/**/*.js", "server.js"]
}
